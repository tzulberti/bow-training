<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ar.com.tzulberti.bowtraining.DisplayMessageActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:onClick="stop"
        android:text="@string/button_stop"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="68dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="33dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="@string/seriesAmount"
        android:layout_marginStart="16dp"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_editor_absoluteY="82dp" />

    <TextView
        android:id="@+id/textTotalSeries"
        android:layout_width="0dp"
        android:layout_height="33dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textTotalRepetitions"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textTotalRepetitions" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="180dp"
        android:layout_height="31dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="@string/currentSerie"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="59dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="181dp"
        android:layout_height="32dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="@string/repetitionsAmount"
        android:layout_marginStart="15dp"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_editor_absoluteY="126dp" />

    <TextView
        android:id="@+id/textTotalRepetitions"
        android:layout_width="0dp"
        android:layout_height="32dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="@+id/textCurrentSerie"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/textTotalSeries"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginRight="1dp" />

    <TextView
        android:id="@+id/textCurrentSerie"
        android:layout_width="0dp"
        android:layout_height="31dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="@+id/textCurrentRepetition"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginRight="2dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="181dp"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="@string/currentRepetition"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textCurrentRepetition"
        tools:layout_constraintBaseline_creator="1" />

    <TextView
        android:id="@+id/textCurrentRepetition"
        android:layout_width="0dp"
        android:layout_height="34dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textTimeLeft"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="@+id/textTimeLeft"
        android:layout_marginTop="138dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="139dp"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginRight="2dp" />

    <TextView
        android:id="@+id/textTimeLeft"
        android:layout_width="259dp"
        android:layout_height="112dp"
        android:layout_marginLeft="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="118dp" />

</android.support.constraint.ConstraintLayout>
